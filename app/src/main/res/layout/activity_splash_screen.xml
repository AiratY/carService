<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">


    <TextView
        android:id="@+id/splashScreenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_splash_screen_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:theme="@style/valueTheme"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconImageView" />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="@dimen/width_icon_splash_screen"
        android:layout_height="@dimen/width_icon_splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_blue_services_24"
        android:contentDescription="@string/desc_icon_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>