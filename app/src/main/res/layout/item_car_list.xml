<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/branch_mt_8dp"
    android:layout_marginStart="@dimen/branch_sm_8dp"
    android:layout_marginEnd="@dimen/branch_em_8dp"
    android:theme="@style/CardViewTheme"
    android:layout_marginBottom="@dimen/mt_16dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/width_icon_car"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/branch_em_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_automobile_1300231"
            android:contentDescription="@string/desc_icon_image_view" />

        <TextView
            android:id="@+id/makeCarTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/branch_sm_8dp"
            android:layout_marginTop="@dimen/branch_mt_8dp"
            android:layout_marginEnd="@dimen/branch_em_8dp"
            tools:text="BMW"
            android:theme="@style/valueTheme"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/modelCarTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/branch_sm_8dp"
            android:layout_marginTop="@dimen/branch_mt_8dp"
            android:layout_marginEnd="@dimen/branch_em_8dp"
            tools:text="M6"
            android:theme="@style/valueTheme"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/makeCarTextView" />

        <TextView
            android:id="@+id/numberCatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/branch_sm_8dp"
            android:layout_marginTop="@dimen/branch_mt_8dp"
            tools:text="А692ЕМ 73"
            android:theme="@style/titleTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modelCarTextView" />

        <TextView
            android:id="@+id/yearCarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/titleTheme"
            android:layout_marginStart="@dimen/branch_sm_8dp"
            android:layout_marginTop="@dimen/branch_mt_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/mt_16dp"
            app:layout_constraintTop_toBottomOf="@+id/numberCatTextView"
            tools:text="Год выпуска: 1997 г." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
